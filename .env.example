# Production environment configuration
# Copy this file to .env.prod and update values for production deployment

# Services Configuration (use external IPs/domains in production)
CHROMA_HOST=your-chroma-host.com
CHROMA_PORT=8000
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379

# Security Configuration (IMPORTANT: Change these!)
API_KEY=your_secure_api_key_change_this
SECRET_KEY=your_secret_key_change_this
ALLOWED_ORIGINS=https://your-domain.com,https://your-app.com

# Database Configuration
CHROMA_AUTH_ENABLED=true
CHROMA_AUTH_TOKEN=your_chroma_auth_token

# Redis Authentication
REDIS_PASSWORD=your_redis_password

# SSL/TLS Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Monitoring and Logging
LOG_LEVEL=WARNING
SENTRY_DSN=your_sentry_dsn_for_error_monitoring
METRICS_ENABLED=true

# Resource Limits
MAX_CONCURRENT_UPLOADS=5
MAX_FILE_SIZE_MB=100
RATE_LIMIT_PER_MINUTE=60

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30